@rendermode InteractiveServer

<header class="flex items-center h-16 px-4">
    <div class="flex justify-start w-1/2">
        <button @onclick="@ShowSidebar"
            class="h-8 w-8 flex justify-center items-center p-2 border rounded-md hover:bg-brightBlack transition-colors duration-300"
        >
            <i class="fa-solid fa-bars text-white"></i>
        </button>
    </div>
    <div class="flex flex-shrink-0">
        <h1 class="font-bold text-xl">
            Tommy Grabowski
        </h1>
    </div>
    <div class="flex justify-end w-1/2">
        <a href="/" class="group">
            <img
                src="/TG.webp"
                alt="TG Logo"
                class="h-8 w-8 rounded-full transition-transform duration-300 ease-in-out group-hover:scale-110"
            />
        </a>
    </div>
</header>

<Sidebar
    IsSidebarVisible="@IsSidebarVisible"
    IsSidebarVisibleChanged="HandleSidebarVisibility"
/>

@code {
    private bool IsSidebarVisible { get; set; } = false;
    private void ShowSidebar()
    {
        IsSidebarVisible = true;
    }
    private void HandleSidebarVisibility(bool isVisible)
    {
        IsSidebarVisible = isVisible;
    }
}
